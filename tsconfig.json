{
  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "noEmit": true
  },
  "include": ["src", "cli.ts", "src/colors.ts"],
  "exclude": ["node_modules"]
}
